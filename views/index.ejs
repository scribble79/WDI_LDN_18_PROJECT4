<!DOCTYPE html>
<html ng-app="ChildrensCenters">
<head>
  <title>Children's Centre's</title>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBxM36DxD-TmmCuWMML0UXBVSirOUkF42Q"></script>
  <script src="/vendor/angular/angular.js"></script>
  <script src="/vendor/angular-resource/angular-resource.min.js"></script>
  <script src="/vendor/angular-jwt/dist/angular-jwt.min.js"></script>
  <script src="/vendor/angular-ui-router/release/angular-ui-router.min.js"></script>
  <script src="/vendor/angular-bootstrap/ui-bootstrap.min.js"></script>
  <script src="/vendor/angular-animate/angular-animate.min.js"></script>
  <script src="/vendor/angular-ticker/release/ticker.js"></script>

  <script src="/js/app.js"></script>
  <script src="/js/controllers/navBarController.js"></script>
  <script src="/js/controllers/tickerController.js"></script>
  <script src="/js/controllers/adminsController.js"></script>
  <script src="/js/models/admin.js"></script>
  <script src="/js/controllers/centersController.js"></script>
  <script src="/js/models/center.js"></script>
  <script src="/js/controllers/eventsController.js"></script>
  <script src="/js/models/event.js"></script>
  <script src="/js/directives/mapDirective.js"></script>
  <script src="/js/services/token.js"></script>
  <script src="/js/services/authInterceptor.js"></script>

  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="css/reset.css">
  <link rel="stylesheet" type="text/css" href="css/custom.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="stylesheet" href="/vendor/angular-ticker/release/ticker.css">

</head>
<body ng-controller="adminsController as admins">
  <header>
    <div class="header-content">
      <img ui-sref="home" alt="Brand" src="/images/Southwarklogo.png">
      <h1>Bermondsey and Rotherhite Locality Children's Centres</h1>
      <a href=""><i class="fa fa-twitter-square"></i></a>
      <a href=""><i class="fa fa-facebook-square"></i></a>
    </div>
  </header>
  <nav ng-controller="navBarController as nav" class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <ul class="nav navbar-nav">
          <li ng-repeat="center in nav.centers">
            <a ui-sref="center({ id: center._id })">{{center.name}}</a>
          </li>
          <li ng-hide="admins.isLoggedIn()"><a href="#login">Login</a></li>
          <li ng-hide="admins.isLoggedIn()"><a href="#register">Register</a></li>
          <li ng-show="admins.isLoggedIn()"><a href="#logout" ng-click="admins.logout()">Logout</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <span class="dropdown" uib-dropdown on-toggle="toggled(open)">
            <a href id="simple-dropdown" uib-dropdown-toggle>
              Children's Centres Information
            </a>
            <ul uib-dropdown-menu aria-labelledby="simple-dropdown">
              <li ng-repeat="item in nav.items">
                <a herf>{{item.name}}</a></li>
                <li><a ui-sref="home">Home</a></li>
                <li><a ui-sref="info">Information For Families</a></li>
                <li ng-repeat="center in nav.centers"><a href="{{ center.link }}">{{ center.name }}</a></li>
              </ul>
            </span>
          </ul> 
        </div>
      </div>
    </nav>
    <main ui-view></main>
  </body>
  </html>